#!/usr/bin/env bash

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER api
	chown -R $WWWUSER:www-data /var/www/api/storage /var/www/api/bootstrap/cache
else
	chown -R www-data:www-data /var/www/api/storage /var/www/api/bootstrap/cache
fi

chmod -R 775 /var/www/api/storage /var/www/api/bootstrap/cache

exec php-fpm
